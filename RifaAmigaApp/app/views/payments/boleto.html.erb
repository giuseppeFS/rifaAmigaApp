		<span class="especie-documento2 linha9"><%= "#{@boleto.especie_documento}" %></span>
		<span class="aceite linha9"><%= "#{@boleto.aceite}" %></span>
		<span class="nosso-numero2 linha9"><%= "#{@boleto.nosso_numero}" %></span>
		<span class="carteira linha10"><%= "#{@boleto.carteira}" %></span>
		<span class="especie-moeda linha10">R$</span>
		<span class="valor2 linha10"><%= "#{@boleto.valor_formatado}" %></span>
		<span class="linha11"><%= "#{@boleto.instrucao2}" %></span>
		<span class="linha12"><%= "#{@boleto.instrucao3}" %></span>
		<span class="linha13"><%= "#{@boleto.instrucao4}" %></span>
		<span class="linha14"><%= "#{@boleto.instrucao5}" %></span>
		<span class="linha15"><%= "#{@boleto.instrucao6}" %></span>
		<span class="linha16"><%= "#{@boleto.sacado_linha1}" %></span>
		<span class="linha17"><%= "#{@boleto.sacado_linha2}" %></span>
		<span class="linha18"><%= "#{@boleto.sacado_linha3}" %></span>
	</div>
	<div id="codigo-barras"><%= @boleto.codigo_barras %></div>
</div>