		<span class="agencia-codigo-cedente1 linha3"><%= "#{@boleto.agencia}/#{@boleto.conta_corrente}-#{@boleto.conta_corrente_dv}" %></span>
		<span class="valor1 linha4"><%= "#{@boleto.valor_formatado}" %></span>
		<span class="sacado1 linha5"><%= "#{@boleto.sacado}" %></span>
		<span class="instrucao1 linha6"><%= "#{@boleto.instrucao1}" %></span>
		<span class="local-pagamento1 linha7"><%= "#{@boleto.local_pagamento}" %></span>
		<span class="vencimento2 linha7"><%= "#{@boleto.data_vencimento.strftime('%d/%m/%Y')}" %></span>
		<span class="cedente2 linha8"><%= "#{@boleto.cedente}" %></span>
		<span class="documento-cedente2 linha8"><%= "#{@boleto.documento_cedente}" %></span>
