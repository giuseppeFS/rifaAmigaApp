<div id="boleto">
	<%= image_tag 'boleto/layout.gif' %>
	<div id="elementos">
		<%= image_tag "boleto/#{@boleto.banco}.gif", :class => "logo1" %>
		<%= image_tag "boleto/#{@boleto.banco}.gif", :class => "logo2" %>
