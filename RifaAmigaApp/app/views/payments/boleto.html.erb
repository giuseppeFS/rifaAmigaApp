		<span class="documento-cedente1 linha2"><%= "#{@boleto.documento_cedente}" %></span>
		<span class="vencimento1 linha2"><%= "#{@boleto.data_vencimento.strftime('%d/%m/%Y')}" %></span>
		<span class="nosso-numero1 linha3"><%= "#{@boleto.nosso_numero}" %></span>
		<span class="numero-documento1 linha3"><%= "#{@boleto.numero_documento}" %></span>
		<span class="especie-documento1 linha3"><%= "#{@boleto.especie_documento}" %></span>
