.linha3 { top: 66px; }
.linha4 { top: 89px; left: 10px; }
.linha5 { top: 110px; }
.linha6 { top: 131px; }
.linha7 { top: 243px; }
.linha8 { top: 264px; }
.linha9 { top: 287px; }
.linha10 { top: 309px; }
.linha11 { top: 338px; }
.linha12 { top: 353px; }
.linha13 { top: 368px; }
